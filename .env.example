# Choose one provider
OPENAI_API_KEY=
ANTHROPIC_API_KEY=

# Optional override, e.g. anthropic:claude-3-5-sonnet-latest
MEETINGGENIUS_MODEL=

# Optional: influences auto-seeded research tasks (default: Seattle)
MEETINGGENIUS_DEFAULT_LOCATION=

# Optional: set to 1 to disable external research tools
MEETINGGENIUS_NO_BROWSE=0

# Noise controls (backend)
# - Max new cards per rolling minute (default: 2)
MEETINGGENIUS_MAX_CREATE_CARDS_PER_MINUTE=2
# - Minimum seconds between new card creates (default: 20)
MEETINGGENIUS_MIN_SECONDS_BETWEEN_CREATES=20
# - When enabled, converts similar-title creates into updates (default: 1)
MEETINGGENIUS_DEDUPE_TITLE_SIMILARITY=1

# Mindmap AI (optional)
# - Enable/disable mindmap extraction (default: 1)
MEETINGGENIUS_MINDMAP_AI=1
# - Minimum seconds between mindmap AI runs (default: 2.5)
MEETINGGENIUS_MINDMAP_AI_MIN_INTERVAL_SECONDS=2.5
# - Max new nodes per run (default: 12)
MEETINGGENIUS_MINDMAP_MAX_NEW_NODES_PER_RUN=12
# - Max new top-level topics per run (default: 4)
MEETINGGENIUS_MINDMAP_MAX_NEW_ROOT_TOPICS_PER_RUN=4

# Stricter handling when the latest transcript is interim/partial:
# - If any final transcript exists (default: 3 / 0)
MEETINGGENIUS_MINDMAP_MAX_NEW_NODES_PER_INTERIM_RUN=3
MEETINGGENIUS_MINDMAP_MAX_NEW_ROOT_TOPICS_PER_INTERIM_RUN=0
# - If there are no final transcript events yet (bootstrap defaults: 6 / 2)
MEETINGGENIUS_MINDMAP_MAX_NEW_NODES_BEFORE_FINAL=6
MEETINGGENIUS_MINDMAP_MAX_NEW_ROOT_TOPICS_BEFORE_FINAL=2
